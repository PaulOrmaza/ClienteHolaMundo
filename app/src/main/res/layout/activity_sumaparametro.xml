<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".SUMAPARAMETRO">

    <!-- Título -->
    <TextView
        android:id="@+id/txt_titulo_suma_parametro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Suma con Parámetro"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FF5722"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- EditText para ingresar el número -->
    <EditText
        android:id="@+id/edt_numero"
        android:layout_width="339dp"
        android:layout_height="47dp"
        android:layout_marginTop="40dp"
        android:hint="Ingrese un número"
        android:inputType="number"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_titulo_suma_parametro" />

    <!-- Botón para realizar la suma -->
    <Button
        android:id="@+id/btn_suma_parametro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:backgroundTint="#FF5722"
        android:text="Obtener Suma"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/edt_numero"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TextView para mostrar el resultado -->
    <TextView
        android:id="@+id/txt_resultado_suma_parametro"
        android:layout_width="205dp"
        android:layout_height="90dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="Resultado: "
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_suma_parametro" />

</androidx.constraintlayout.widget.ConstraintLayout>

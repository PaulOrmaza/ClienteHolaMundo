<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".PENTAGONO">

    <!-- Título -->
    <TextView
        android:id="@+id/txt_titulo_pentagono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cálculo del Pentágono"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FF5722"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp"/>

    <!-- Campo para el lado -->

    <!-- Campo para el apotema -->

    <!-- Botón para calcular -->

    <EditText
        android:id="@+id/edit_lado"
        android:layout_width="300dp"
        android:layout_height="51dp"
        android:layout_marginTop="72dp"
        android:hint="Lado"
        android:inputType="numberDecimal"
        android:padding="10dp"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_titulo_pentagono" />

    <EditText
        android:id="@+id/edit_apotema"
        android:layout_width="299dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:hint="Apotema"
        android:inputType="numberDecimal"
        android:padding="10dp"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_lado" />

    <Button
        android:id="@+id/btn_calcular_pentagono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF5722"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/edit_apotema"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <!-- Resultado -->
    <TextView
        android:id="@+id/txt_resultado_pentagono"
        android:layout_width="192dp"
        android:layout_height="99dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:padding="16dp"
        android:text="Resultado:"
        android:textColor="#FF5722"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_calcular_pentagono" />
</androidx.constraintlayout.widget.ConstraintLayout>
